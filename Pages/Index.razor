@page "/"
@code {
    [CascadingParameter] public required Game State { get; set; }
}

<PageTitle>In the Line of Business</PageTitle>

<svg viewBox="0 0 @(State.Width) @(State.Height)">
    <rect width="@State.Width" height="@State.Height" />
    <circle cx="50" cy="50" r="50" fill="white" @onclick="() => State.Counter++" />
    <text dominant-baseline="central" text-anchor="middle" x="50" y="50">+1</text>
    <text dominant-baseline="central" y="108" fill="white" style="font-size: 16px">Elapsed: @((int)State.Counter)</text>
</svg>