@page "/"
@code {
    [CascadingParameter] public required Game State { get; set; }

    private Action Focus(int x) => () => State.FocusActor = x;
}

<PageTitle>In the Line of Business</PageTitle>

<svg viewBox="0 0 @(State.Width) @(State.Height)">
    <rect width="@State.Width" height="@State.Height" fill="#aaaaff" />
    <Actor Center="new(180, 85)" Label="E1" Fraction="@State.Fraction"
           Focus="State.FocusActor == 1" OnHover="Focus(1)" />
    <Actor Center="new(420, 85)" Label="E2"
           Focus="State.FocusActor == 2" OnHover="Focus(2)" />
</svg>