@page "/"
@code {
    [CascadingParameter] public required Game State { get; set; }
}

<PageTitle>In the Line of Business</PageTitle>

<svg viewBox="0 0 @(State.Width) @(State.Height)">
    <rect width="@State.Width" height="@State.Height" fill="#aaaaff" />
    <Actor Center="new(50, 50)" Label="@($"{State.Fraction:0.00}")" Fraction="@State.Fraction" />
    <Actor Center="new(200, 50)" Label="+1" OnClick="() => State.Counter++" />
    <text dominant-baseline="central" y="208" style="font-size: 16px">Elapsed: @((int)State.Counter)</text>
</svg>